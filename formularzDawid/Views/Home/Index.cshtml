@model formularzDawid.Models.Rejestracja

@{
    ViewData["Title"] = "Formularz rejestracyjny";
}

<h1>Formularz rejestracyjny</h1>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="Index" method="post" id="rejestracjaForm">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Imie" class="control-label">Imię</label>
        <input asp-for="Imie" class="form-control" />
        <span asp-validation-for="Imie" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nazwisko" class="control-label">Nazwisko</label>
        <input asp-for="Nazwisko" class="form-control" />
        <span asp-validation-for="Nazwisko" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Adres e-mail</label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Haslo" class="control-label">Hasło</label>
        <input asp-for="Haslo" type="password" class="form-control" />
        <span asp-validation-for="Haslo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PotwierdzenieHasla" class="control-label">Potwierdzenie hasła</label>
        <input asp-for="PotwierdzenieHasla" type="password" class="form-control" />
        <span asp-validation-for="PotwierdzenieHasla" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NrTelefonu" class="control-label">Numer telefonu</label>
        <input asp-for="NrTelefonu" type="tel" class="form-control" />
        <span asp-validation-for="NrTelefonu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Wiek" class="control-label">Wiek</label>
        <input asp-for="Wiek" type="number" class="form-control" />
        <span asp-validation-for="Wiek" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Miasto" class="control-label">Miasto</label>
        <select asp-for="Miasto" asp-items="Html.GetEnumSelectList<formularzDawid.Models.Rejestracja.Miasta>()" class="form-control"></select>
        <span asp-validation-for="Miasto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Zarejestruj</button>
        <button type="submit" formaction="@Url.Action("Wyczyść")" class="btn btn-secondary">Wyczyść</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
